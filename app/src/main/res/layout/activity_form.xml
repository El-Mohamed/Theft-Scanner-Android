<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202124">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15sp"
        >

        <TextView
            style="@style/Form_Title"
            android:text="@string/title_1" />
        <EditText
            android:id="@+id/owner"
            style="@style/Form_EditText"
            android:hint="@string/hint_full_name" />

        <TextView
            style="@style/Form_Title"
            android:text="@string/title_2" />
        <EditText
            android:id="@+id/type"
            style="@style/Form_EditText"
            android:hint="@string/hint_type" />
        <EditText
            android:id="@+id/brand"
            style="@style/Form_EditText"
            android:hint="@string/hint_brand" />
        <EditText
            android:id="@+id/model"
            style="@style/Form_EditText"
            android:hint="@string/hint_model" />

        <TextView
            style="@style/Form_Title"
            android:text="@string/title_3" />
        <EditText
            android:id="@+id/street"
            style="@style/Form_EditText"
            android:hint="@string/hint_street_number" />
        <EditText
            android:id="@+id/city"
            style="@style/Form_EditText"
            android:hint="@string/hint_city" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="30sp"
            android:layout_marginVertical="10sp"
            android:background="@drawable/button_layout"
            android:fontFamily="@font/righteous"
            android:padding="10sp"
            android:text="@string/send_button"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

    </LinearLayout>

</ScrollView>



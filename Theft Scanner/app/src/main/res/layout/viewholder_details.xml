<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15sp"
    android:outlineSpotShadowColor="@color/BackgroundColorLight"
    app:cardBackgroundColor="@color/BackgroundColorLight"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:contentPadding="10sp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BackgroundColorLight"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail1"
                    style="@style/Details_Text"
                    android:text="Brand" />

                <TextView
                    android:id="@+id/detail2"
                    style="@style/Details_Text"
                    android:text="Model" />

            </LinearLayout>

            <ImageView
                android:id="@+id/vehicle_image"
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginVertical="15sp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail3"
                    style="@style/Details_Text"
                    android:text="Street" />

                <TextView
                    android:id="@+id/detail4"
                    style="@style/Details_Text"
                    android:text="City" />

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>


